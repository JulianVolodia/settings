[user]
	name = Drew Noakes
	email = git@drewnoakes.com
[color]
	ui = auto
[core]
	autocrlf = input
[push]
	default = simple
[branch]
    autosetuprebase = always
[merge]
    tool = mymeld
    conflictstyle = diff3
[mergetool "mymeld"]
    cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED
